+static void set_use_dec(void* data)
+{
+	struct IR *ir = data;
+
+	if (ir->c_rx.addr) i2c_release_client(&ir->c_rx);
+	if (ir->c_tx.addr) i2c_release_client(&ir->c_tx);
+	MOD_DEC_USE_COUNT;
+	if (ir->l.owner != NULL)
+		module_put(ir->l.owner);
