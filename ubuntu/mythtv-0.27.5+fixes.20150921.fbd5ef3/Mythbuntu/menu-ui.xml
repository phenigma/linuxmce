            <statetype name="buttonitem">
                <state name="active">
                    <area>0,0,1050,115</area>
                    <shape name="slctbr">
                        <area>0,0,1020,115</area>
                        <type>roundbox</type> 
                        <fill color="#666666" alpha="50" />
                        <cornerradius>90</cornerradius> 
                    </shape>
                    <textarea name="buttontext">
                        <area>45,0,930,115</area>
                        <font>menufont</font>
                        <align>left,vcenter</align>
                        <cutdown>yes</cutdown>
                    </textarea>
                </state>
                <state name="selectedactive" from="active">
                    <shape name="slctbr">
                        <area>0,0,1020,115</area>
                        <type>roundbox</type> 
                        <fill color="#FFFFFF" alpha="50" />
                        <cornerradius>90</cornerradius> 
                    </shape>
                    <textarea name="buttontext">
                        <area>45,0,930,115</area>
                        <font>selectedmenufont</font>
                        <align>left,vcenter</align>
                        <cutdown>yes</cutdown>
                    </textarea>
                </state>
            </statetype>
            <statetype name="upscrollarrow">
                <position>-15,85</position>
                <showempty>yes</showempty>
                <state type="full">
                    <imagetype name="upon">
                        <filename>shared/uparrow.png</filename>
