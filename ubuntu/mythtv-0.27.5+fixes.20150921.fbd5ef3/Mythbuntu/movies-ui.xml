<mythuitheme>

    <window name="moviesui">

        <imagetype name="moviesbackground">
            <filename>background.png</filename>
            <position>0,0</position>
        </imagetype>

        <shape name="infofiller">
            <area>22,690,1875,330</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="150" />
            <cornerradius>18</cornerradius>
        </shape>

        <shape name="theaternamebox">
            <area>22,600,1875,75</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="150" />
            <cornerradius>18</cornerradius>
        </shape>

        <buttontree name="movietreelist">
            <area>60,60,1800,495</area>
            <numlists>2</numlists>
            <spacing>10</spacing>
            <buttonlist name="listtemplate" from="basebuttonlist" />
        </buttontree>

        <textarea name="theatername" from="basetextarea">
            <area>37,600,1845,75</area>
            <font>basesmall</font>
            <multiline>yes</multiline>
            <align>left,vcenter</align>
            <value>Theater name</value>
        </textarea>

        <textarea name="movietitle" from="basetextarea">
            <area>37,712,1845,120</area>
            <font>baselarge</font>
            <multiline>yes</multiline>
        </textarea>

        <textarea name="rating" from="basetextarea">
            <area>37,825,225,52</area>
                <align>left,vcenter</align>
            <value>Rating:</value>
        </textarea>

        <textarea name="ratingvalue" from="basetextarea">
            <area>390,825,750,52</area>
            <align>left,vcenter</align>
        </textarea>

        <textarea name="runningtime" from="rating">
            <area>37,870,450,52</area>
            <value>Running Time:</value>
        </textarea>

        <textarea name="runningtimevalue" from="ratingvalue">
            <area>390,870,450,52</area>
        </textarea>

        <textarea name="showtimes" from="rating">
            <area>37,915,450,52</area>
            <value>Show Times:</value>
        </textarea>

        <textarea name="showtimesvalue" from="ratingvalue">
            <area>390,922,1050,90</area>
            <align>left,top</align>
            <multiline>yes</multiline>
        </textarea>

    </window>

</mythuitheme>
