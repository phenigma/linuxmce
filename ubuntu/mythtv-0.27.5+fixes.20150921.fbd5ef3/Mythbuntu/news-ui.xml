<?xml version="1.0" encoding="utf-8"?>
<mythuitheme>

    <window name="news">

        <imagetype name="newsbackground">
            <filename>background.png</filename>
            <position>0,0</position>
        </imagetype>

        <shape name="headingbox">
            <area>15,15,1170,90</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="150" />
            <cornerradius>45</cornerradius>
        </shape>

        <shape name="siteslistbox">
            <area>52,120,673,540</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="150" />
            <cornerradius>18</cornerradius>
        </shape>

        <shape name="articleslistbox">
            <area>741,120,1141,540</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="150" />
            <cornerradius>18</cornerradius>
        </shape>

        <shape name="bottombox">
            <area>-7,675,1935,412</area>
            <type>box</type>
            <fill color="#000000" alpha="150" />
        </shape>

        <textarea name="heading" from="basetextarea">
            <area>75,15,1020,90</area>
            <font>baselarge</font>
            <value>News Feeds</value>
                <align>left,vcenter</align>
        </textarea>

        <buttonlist name="siteslist" from="basebuttonlist">
            <area>52,135,658,487</area>
            <spacing>4</spacing>
            <showarrow>yes</showarrow>
            <wrapstyle>items</wrapstyle>
        </buttonlist>

        <buttonlist name="articleslist" from="basebuttonlist">
            <area>756,135,1111,487</area>
            <spacing>4</spacing>
            <showarrow>yes</showarrow>
            <wrapstyle>items</wrapstyle>
        </buttonlist>

        <textarea name="nosites" from="basetextarea">
            <area>300,150,1320,225</area>
            <align>allcenter</align>
            <multiline>yes</multiline>
        </textarea>

        <textarea name="title" from="basetextarea">
            <area>60,690,1530,105</area>
            <font>baselarge</font>
            <multiline>no</multiline>
            <scroll direction="left"/>
        </textarea>

        <textarea name="description" from="basetextarea">
            <area>60,772,1530,225</area>
            <multiline>yes</multiline>
            <align>top</align>
        </textarea>

        <textarea name="updated" from="basetextarea">
            <area>60,990,1620,52</area>
            <font>basesmallgrey</font>
        </textarea>

        <imagetype name="thumbnail">
            <area>1620,772,240,180</area>
            <preserveaspect>true</preserveaspect>
        </imagetype>

        <imagetype name="enclosures">
            <filename>enclosures.png</filename>
            <position>1620,690</position>
        </imagetype>

        <imagetype name="download">
            <filename>need-download.png</filename>
            <position>1812,690</position>
        </imagetype>

        <imagetype name="ispodcast">
            <filename>podcast.png</filename>
            <position>1812,690</position>
        </imagetype>

    </window>

    <window name="editor">

        <shape name="headingbox">
            <area>15,15,1170,90</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="150" />
            <cornerradius>45</cornerradius>
        </shape>

        <textarea name="title" from="basetextarea">
            <font>baselarge</font>
            <area>75,15,1035,90</area>
            <align>left,vcenter</align>
        </textarea>

        <shape name="editbox">
            <area>450,120,1020,870</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="150" />
            <cornerradius>18</cornerradius>
        </shape>

        <textarea name="namelabel" from="basetextarea">
            <area>577,300,150,45</area>
            <align>right,vcenter</align>
        </textarea>

        <textedit name="name" from="basetextedit">
            <position>750,300</position>
        </textedit>

        <textarea name="urllabel" from="basetextarea">
            <area>577,412,150,45</area>
            <align>right,vcenter</align>
        </textarea>

        <textedit name="url" from="basetextedit">
            <position>750,412</position>
        </textedit>

        <textarea name="iconlabel" from="basetextarea">
            <area>577,525,150,45</area>
            <align>right,vcenter</align>
        </textarea>

        <textedit name="icon" from="basetextedit">
            <position>750,525</position>
        </textedit>

        <checkbox name="podcast_check" from="basecheckbox">
            <position>1015,637</position>
        </checkbox>

        <textarea name="podcastlabel" from="basetextarea">
            <area>760,637,225,45</area>
            <align>right,vcenter</align>
        </textarea>

        <button name="cancel" from="basebutton">
            <position>562,750</position>
            <value>Cancel</value>
        </button>

        <button name="ok" from="basebutton">
            <position>1132,750</position>
            <value>OK</value>
        </button>

    </window>

    <window name="config">

        <buttonlist name="category" from="basebuttonlist">
            <area>60,60,750,825</area>
        </buttonlist>

        <buttonlist name="sites" from="basebuttonlist">
            <area>885,60,975,825</area>
            <showarrow>no</showarrow>
        </buttonlist>

        <textarea name="context_switch" from="basetextarea">
            <area>30,825,1140,75</area>
            <multiline>yes</multiline>
        </textarea>

        <textarea name="help" from="basetextarea">
            <area>30,750,1140,225</area>
            <multiline>yes</multiline>
        </textarea>

    </window>

</mythuitheme>
