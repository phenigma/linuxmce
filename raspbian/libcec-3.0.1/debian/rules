#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

%:
	dh  $@


override_dh_auto_configure:
	cmake -DCMAKE_BUILD_TYPE=Release \
		-DBUILD_SHARED_LIBS=1 \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DHAVE_RPI_API=1 \
		-DRPI_BCM_HOST=/opt/vc/lib

#		-DCMAKE_CXX_FLAGS_RELEASE="-std=c++0x" \
